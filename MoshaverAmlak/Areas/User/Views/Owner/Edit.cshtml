@model OwnerViewmodel
@{
    ViewData["Title"] = "Edit";
}

<div class="container m-4">
    <div class="row">
        <div class="col-10">
            <form asp-area="User" asp-controller="Owner" asp-action="Edit" asp-route-Id="@Model.Id" method="post"> 
                <div class="row">
                    <div class="col-6">
                        <label class="d-block fw-bold m-3">
                            ویرایش نام:
                        </label>
                        <input type="text" asp-for="@Model.FullName"/>
                    </div>
                    <div class="col-12">
                        <label class="d-block fw-bold m-3">
                             ویرایش توضیحات : 
                        </label>
                        <textarea rows="5" cols="50" asp-for="@Model.Description"></textarea>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-6">
                        <input type="submit" value="ثبت تغییرات" />
                    </div>
                    <div class="col-6">
                        <a asp-area="User" asp-controller="Owner" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>