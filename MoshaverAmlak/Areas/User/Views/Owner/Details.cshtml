@model Owner
@{
    ViewData["Title"] = "Details";
}

<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Owner" asp-action="Details" method="post">
                <div class="row">
                    <div class="col-3">
                        <label class="d-block">نام خریدار</label>
                        <label>@Model.FullName</label>
                    </div>
                    <div class="col-6">
                        <label class="d-block">تلفن ها</label>
                        <label>@Model.OwnerTels</label>
                    </div>
                    <div class="col-3">
                        <label class="d-block">توضیحات</label>
                        <label>@Model.Descrption</label>
                    </div>
                    <div class="col-12 mt-4">
                        <a asp-area="User" asp-controller="Owner" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



