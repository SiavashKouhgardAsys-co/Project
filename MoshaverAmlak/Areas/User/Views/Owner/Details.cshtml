@model OwnerDetailsViewmodel
@{
    ViewData["Title"] = "Details";
}

<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Owner" asp-action="Details" asp-route-Id="@Model.Id" method="post">
                <div class="row">
                    <div class="col-3">
                        <label class="d-block fw-bold"> نام خریدار :</label>
                        <label>@Model.FullName</label>
                    </div>
                    <div class="col-9">
                        <label class="d-block fw-bold">تلفنها : </label>
                        @{ 
                            int index = 1;
                            foreach (var item in Model.Tels)
                            {
                                <label class="d-block mt-1">@index ) @item.Tel</label>
                                index++;
                            }
                        }
                    </div>
                    <div class="col-12 mt-5">
                        <label class="d-block fw-bold"> توضیحات :</label>
                        <p>@Model.Description</p>
                    </div>
                    <div class="col-12 mt-5">
                        <a asp-area="User" asp-controller="Owner" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



