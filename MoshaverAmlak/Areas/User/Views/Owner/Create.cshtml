@model Owner
@{
    ViewData["Title"] = "Create";
}

<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Owner" asp-action="Create" method="post">
                <div class="row">
                    <div class="col-6">
                        <label class="d-block">نام مالک</label>
                        <input type="text" asp-for="@Model.FullName" />
                    </div>
                   
                    <div class="col-6">
                        <label class="d-block">توضیحات</label>
                        <input type="text" asp-for="@Model.Descrption" />
                    </div>
                    <div class="col-6">
                        <label class="d-block">تلفن</label>
                        <input type="text" asp-for="@Model.OwnerTels" />
                    </div>
                    <div class="col-6 mt-4">
                        <input type="submit" value="ثبت اطلاعات" />
                    </div>
                    <div class="col-6 mt-4">
                        <a asp-area="User" asp-controller="Owner" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
                <div class="row">

                </div>
            </form>
        </div>
    </div>
</div>
