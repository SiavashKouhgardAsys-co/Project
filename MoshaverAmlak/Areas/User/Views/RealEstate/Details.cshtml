@model RealStateDetailsViewmodel
@{
    ViewData["Title"] = "Details";
}

<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="RealEstate" asp-action="Details" asp-route-Id="@Model.Id" method="post">
                <div class="row">
                    <div class="col-2">
                        <label class="d-block fw-bold mb-2">نام مشاورین املاک :</label>
                        <label>@Model.Name</label>
                    </div>
                    <div class="col-2">
                        <label class="d-block fw-bold mb-2">شناسه ثبت :</label>
                        <label>@Model.RegistrationNumber</label>
                    </div>
                    <div class="col-2 fw-bold">
                        <label class="d-block mb-2">
                            تلفنها :
                        </label>
                        @{
                            int indexTel = 1;
                            foreach (var item in Model.RealEstateTels)
                            {

                                <label class="d-block mt-1">@indexTel ) @item.Tel </label>
                                indexTel++;
                            }
                        }
                    </div>
                    <div class="col-6 fw-bold">
                        <label class="d-block mb-2">
                            آدرس ها :
                        </label>
                        @{
                            int indexAddress = 1;
                            foreach (var item in Model.RealEstateAddresses)
                            {

                                <label class="d-block mt-1">@indexAddress) @item.Address</label>
                                indexAddress++;
                            }
                        }
                    </div>

                    <div class="col-12 mt-5">
                        <label class="d-block fw-bold mt-2">توضیحات : </label>
                        <p>@Model.Description</p>
                    </div>
                    <div class="col-12 mt-4">
                        <a asp-area="User" asp-controller="RealEstate" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



