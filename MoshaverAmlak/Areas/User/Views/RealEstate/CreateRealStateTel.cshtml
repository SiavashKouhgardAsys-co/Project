@model RealStateTelViewmodel
@{
    ViewData["Title"] = "CreateRealStateTel";
}

<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="RealEstate" asp-action="CreateRealStateTel" method="post">
                <div class="row">
                    <div class="col-4">
                        <label class="fw-bolder">نام مشاورین املاک :</label>
                        <label class="fw-bold">@Model.RealState.Name</label>
                    </div>

                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="d-block fw-bold my-3"> ورود تلفن جدید :</label>
                        <input type="text" asp-for="@Model.RealStateInfo.Tel" />
                        <input type="hidden" asp-for="@Model.RealStateInfo.RealEstateId" value="@Model.RealState.Id" />
                        <input class="d-block mt-3" type="submit" value="افزودن" />
                    </div>
                    <div class="col-8">
                        <div class="row">

                            @{
                                foreach (var item in Model.Tels)
                                {
                                    var data = new Dictionary<string, string>()
                                                                                                                                                                               {
                                        { "realStateId" , Model.RealState.Id.ToString()},
                                        { "telId" , item.Id.ToString() }

                                    };

                                    <div class="col-4 my-3">
                                        <a asp-area="User" asp-controller="RealEstate" asp-action="DeleteRealStateTel" asp-all-route-data="data">
                                            <i class="fa fa-trash-alt"></i>
                                        </a>
                                        <label asp-for="@Model.Tels">
                                            @item.Tel
                                        </label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <a asp-area="User" asp-controller="RealEstate" asp-action="Index">
                        بازگشت
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


