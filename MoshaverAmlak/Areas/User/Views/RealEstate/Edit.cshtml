@model RealStateViewmodel
@{
    ViewData["Title"] = "Edit";
}

<div class="container m-4">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="RealEstate" asp-action="Edit" asp-route-Id="@Model.Id" method="post">
                <div class="row">
                    <div class="col-4">
                        <label class="d-block fw-bold my-2">
                            ویرایش نام :
                        </label>
                        <input type="text" asp-for="@Model.Name" />
                    </div>
                    <div class="col-8">
                        <label class="d-block fw-bold mb-2">
                            ویرایش شماره ثبت :
                        </label>
                        <input type="text" asp-for="@Model.RegistrationNumber" />
                    </div>
                    <div class="col-12">
                        <label class="d-block fw-bold my-2">
                            ویرایش توضیحات :
                        </label>
                        <textarea rows="5" cols="50" type="text" asp-for="@Model.Description"></textarea>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-6">
                        <input type="submit" value="ثبت تغییرات" />
                    </div>
                    <div class="col-6">
                        <a asp-area="User" asp-controller="RealEstate" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>