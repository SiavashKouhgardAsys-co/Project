@model InvestorViewmodel
@{
    ViewData["Title"] = "Create";
}


<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Investor" asp-action="Create" method="post">
                <div class="row">
                    <div class="col-6">
                        <label class="d-block fw-bold">نام سرمایه گذار :</label>
                        <input type="text" asp-for="@Model.FullName" />
                    </div>
                    <div class="col-6">
                        <label class="d-block fw-bold">میزان سرمایه :</label>
                        <input type="text" asp-for="@Model.AmountOfInvestiment"/>
                    </div>
                    <div class="col-12 mt-3">
                        <label class="d-block mt-2 fw-bold">توضیحات</label>
                        <textarea rows="5" cols="50" type="text" asp-for="@Model.Description"></textarea>
                    </div>
                    <div class="col-12 mt-4">
                        <input type="submit" value="ثبت اطلاعات" />
                        <a asp-area="User" asp-controller="Investor" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

