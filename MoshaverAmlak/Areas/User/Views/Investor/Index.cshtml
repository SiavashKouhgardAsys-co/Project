@model SendDataToView<List<InvestorViewmodel>>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 my-3">
            <a asp-area="User" asp-controller="Investor" asp-action="Create" class="btnRegister">
                ثبت سرمایه گذار جدید
            </a>
        </div>
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <span>ردیف</span>
                        </th>
                        <th>
                            <span>نام سرمایه گذار</span>
                        </th>
                        <th>
                            <span>میزان سرمایه</span>
                        </th>
                        <th>
                            <span>تلفن</span>
                        </th>
                        <th>
                            عملیات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;

                        foreach (var item in Model.Entity)
                        {

                            <tr>
                                <td>
                                    @index
                                </td>
                                <td>
                                    <span>@item.FullName</span>
                                </td>
                                <td>
                                    <span>@item.AmountOfInvestiment</span>
                                </td>
                                <td>
                                    <span>@item.Tel</span>
                                </td>
                                <td>
                                    <a asp-area="User" asp-controller="Investor" asp-action="Delete" asp-route-id="@item.Id">
                                        حذف
                                    </a>
                                    <a asp-area="User" asp-controller="Investor" asp-action="Edit" asp-route-id="@item.Id">
                                        ویرایش
                                    </a>
                                    <a asp-area="User" asp-controller="Investor" asp-action="Details" asp-route-id="@item.Id">
                                        جزیئات
                                    </a>
                                    <a asp-area="User" asp-controller="Investor" asp-action="CreateInvestorTel" asp-route-investorId="@item.Id">
                                        عملیات تلفن
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


