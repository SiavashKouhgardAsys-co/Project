@model InvestorViewmodel
@{
    ViewData["Title"] = "Edit";
}

<div class="container m-4">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Investor" asp-action="Edit" asp-route-Id="@Model.Id" method="post">
                <div class="row">
                    <div class="col-4">
                        <label class="d-block fw-bold mt-1">
                            ویرایش نام :
                        </label>
                        <input type="text" asp-for="@Model.FullName" />
                    </div>
                    <div class="col-8">
                        <label class="d-block fw-bold mt-1">
                            ویرایش سرمایه :
                        </label>
                        <input type="text" asp-for="@Model.AmountOfInvestiment" />
                    </div>
                    <div class="col-12 mt-3">
                        <label class="d-block fw-bold mt-1">
                            ویرایش توضیحات
                        </label>
                        <textarea rows="5" cols="50" type="text" asp-for="@Model.Description"></textarea>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-6">
                        <input type="submit" value="ثبت تغییرات" />
                    </div>
                    <div class="col-6">
                        <a asp-area="User" asp-controller="Investor" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

