@model Investor
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <span>ویرایش اطلاعات سرمایه گذار</span>
        </div>
        <div class="col-6">
            <a asp-area="User" asp-controller="Investor" asp-action="Index">
                بازگشت
            </a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-4">
            <lable>
                نام سرمایه گذار
            </lable>
            <input type="text" />
        </div>
        <div class="col-4"></div>
        <div class="col-12">
            <label class="d-block">توضیحات</label>
            <textarea placeholder="توضیحات مربوط به سرمایه گذار" rows="4" cols="50">

            </textarea>
        </div>
        <div class="col-12">
            <lable class="d-block">
                تلفن
            </lable>
            <textarea rows="1" cols="20">
                  
            </textarea>
        </div>
        <div class="col-12">
            <lable class="d-block">
                آدرس
            </lable>
            <textarea placeholder="آدرس مربوط به سرمایه گذار" rows="4" cols="50">
                  
            </textarea>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <button>ثبت تغییرات</button>
        </div>

    </div>
</div>

