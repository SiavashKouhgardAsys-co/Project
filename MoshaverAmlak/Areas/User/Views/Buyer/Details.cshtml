@model BuyerViewmodel
@{
    ViewData["Title"] = "Details";
}

<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Buyer" asp-action="Details" method="post">
                <div class="row">
                    <div class="col-3">
                        <label class="d-block">نام خریدار</label>
                        <label >@Model.FullName</label> 
                    </div>
                    <div class="col-6">
                        <label class="d-block">مقدار سرمایه</label>
                        <span>از</span>
                        <label>@Model.FromInvestment</label>  
                        <span>تا</span>
                        <label>@Model.ToInvestment</label>
                    </div>
                    <div class="col-3">
                        <label class="d-block">توضیحات</label>
                        <label>@Model.Description</label>
                    </div>
                    <div class="col-12 mt-4">
                        <a asp-area="User" asp-controller="Buyer" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



