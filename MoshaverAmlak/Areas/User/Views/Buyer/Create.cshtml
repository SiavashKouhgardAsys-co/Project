@model Buyer
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-4">
            <lable>
                نام و نام خانوادگی
            </lable>
            <input type="text"/>
        </div>
        <div class="col-4"></div>
        <div class="col-12">
            <label class="d-block">توضیحات</label>
            <textarea placeholder="توضیحات مربوط به خریدار" rows="4" cols="50">

            </textarea>
        </div>
        <div class="col-12">
            <lable class="d-block">
                آدرس
            </lable>
            <textarea placeholder="آدرس مربوط به خریدار" rows="4" cols="50">
                  
            </textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button>ثبت خریدار</button>
        </div>
        <div class="col-12">
            <a asp-area="User" asp-controller="Buyer" asp-action="Index">
                بازگشت
            </a>
        </div>
    </div>
</div>
