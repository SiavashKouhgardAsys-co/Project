@model BuyerTelViewmodel
@{
    ViewData["Title"] = "CreateBuyerTel";
}

<div class="container m-5">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Buyer" asp-action="CreateBuyerTel" method="post">
                <div class="row">
                    <div class="col-4">
                        <label class="d-block">نام خریدار</label>
                        <label >@Model.Buyer.FullName</label>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-4">
                        <label class="d-block"> ورود تلفن جدید </label>
                        <input type="text" asp-for="@Model.BuyerInfo.Tel" />
                        <input type="hidden" name="@Model.BuyerInfo.BuyerId" value="@Model.Buyer.Id" />
                        <input class="d-block mt-3" type="submit" value="افزودن" />
                    </div>
                    <div class="col-8">
                        <div class="row">

                            @{
                                foreach (var item in Model.Tels)
                                {


                                    <div class="col-6">
                                        <a asp-area="User" asp-controller="Buyer" asp-action="DeleteBuyerTel">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                        <label asp-for="@Model.Tels">
                                            @item.Tel
                                        </label>

                                    </div>

                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <a asp-area="User" asp-controller="Buyer" asp-action="Index">
                        بازگشت
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

