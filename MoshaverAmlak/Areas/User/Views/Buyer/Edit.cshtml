@model BuyerViewmodel   
@{
    ViewData["Title"] = "Edit";
}

<div class="container m-4">
    <div class="row">
        <div class="col">
            <form asp-area="User" asp-controller="Buyer" asp-action="Edit" asp-route-Id="@Model.Id"  method="post">
                <div class="row">
                    <div class="col-4">
                        <label class="d-block">
                             ویرایش نام :
                        </label>
                        
                        <input type="text" asp-for="@Model.FullName"/>
                    </div> 
                    <div class="col-8">
                        <label class="d-block">
                            ویرایش سرمایه :
                        </label>
                        <input type="text" asp-for="@Model.FromInvestment"/>
                        <span>تا</span>
                        <input type="text" asp-for="@Model.ToInvestment"> 
                    </div>
                    <div class="col-12">
                        <label class="d-block">
                            ویرایش توضیحات
                        </label>
                        <input type="text" asp-for="@Model.Description">
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-6">
                        <input type="submit" value="ثبت تغییرات" />
                    </div>
                    <div class="col-6">
                        <a asp-area="User" asp-controller="Buyer" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>