@model HomeFile
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-3">
            <label>
                نام مالک
            </label>
            <input type="text"/>
        </div>
        <div class="col-3">
            <label>شماره</label>
            <input type="text"/>
        </div>
        <div class="col-3">
            <label>قیمت</label>
            <input type="text"/>
        </div>
        <div class="col-3">
            <label>منطقه</label>
            <input type="text"/>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-4">
            <p>پارکینگ</p>
            
            <input type="radio" name="isParking"  value="true"/> <span>دارد</span>
            <input type="radio" name="isParking"  value="false"/> <span>ندارد</span>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-12">
                    <label class="d-block">تهویه</label>
                    <input type="radio" name="aircondition"/> <span>چیلر</span>
                    <input type="radio" name="aircondition"/> <span>پکیج سقفی</span>
                    <input type="radio" name="aircondition"/> <span>کولر آبی</span>
                    <input type="radio" name="aircondition"/> <span>کولر گازی</span>
                </div>
                <div class="col-12 mt-3">
                    <label class="d-block">گرمایش</label>
                    <input type="radio" name="HeatingType"/> <span>شوفاژ</span>
                    <input type="radio" name="HeatingType"/> <span>گرمایش از کف</span>
                    <input type="radio" name="HeatingType"/> <span>بخاری</span>
                </div>
                
            </div>
        </div>
    </div>
    <div class="row mt-5 text-center border brand-image">
        <div class="col-12">
            <span>انتخاب عکس</span>

        </div>
    </div>
</div>
