@model Region
@{
    ViewData["Title"] = "Create";
}

<div class="container m-1">
    <div class="row">
        <div class="col">
            <form asp-area="Admin" asp-controller="Region" asp-action="Create" method="post">
                <div class="row">
                    <div class="col-3">
                        <span>ورود اطلاعات</span>
                    </div>
                    <div class="col-3">
                        <input type="text" asp-for="Name" />
                    </div>
                    <div class="col-3">
                        <input type="submit" value="ثبت اطلاعات" />
                    </div>
                    <div class="col-3">
                        <a asp-area="Admin" asp-controller="Region" asp-action="Index">
                            بازگشت
                        </a>
                    </div>

                </div>
                <div class="row">
                    
                </div>
            </form>
        </div>
    </div>
</div>

