@model CategoryFacilities
@{
    ViewData["Title"] = "Edit";
}

<div class="container m-1">
    <div class="row">
        <div class="col">
            <form asp-area="Admin" asp-controller="CategoryFacilities" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                <div class="row">
                    <div class="col-4">
                        <span>
                            ویرایش نام :
                        </span>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.Name" />
                    </div>
                    <div class="col-4">
                        <input type="submit" value="ثبت تغییرات" />
                        <a asp-area="Admin" asp-controller="CategoryFacilities" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



