@model CategoryFacilities
@{
    ViewData["Title"] = "Create";
}

<div class="col">
    <form asp-area="Admin" asp-controller="CategoryFacilities" asp-action="Create" method="post">
        <div class="row">
            <div class="col-3">
                <span>ورود اطلاعات</span>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Name" />
            </div>
            <div class="col-2">
                <input type="submit" value="ثبت اطلاعات" />
            </div>

        </div>
        <div class="row">
            <div class="col-12 ">
                <a asp-area="Admin" asp-controller="CategoryFacilities" asp-action="Index">
                    بازگشت
                </a>
            </div>
        </div>
    </form>
</div>

