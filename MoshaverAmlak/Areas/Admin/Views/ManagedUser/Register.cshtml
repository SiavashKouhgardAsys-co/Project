@model UserRolesViewmodel

@{
    ViewData["Title"] = "ثبت نام";
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <form asp-area="Admin" asp-controller="ManagedUser" asp-action="Register" method="post">
                <div class="row">
                    <div class="col-6">
                        <label>نام و نام خانوادگی</label>
                        <input type="text" asp-for="@Model.User.FullName" />
                    </div>
                    <div class="col-6">
                        <label>ایمیل</label>
                        <input type="text" asp-for="@Model.User.Email" />
                    </div>
                    <div class="col-6">
                        <label>موبایل</label>
                        <input type="text" asp-for="@Model.User.Phone" />
                    </div>
                    <div class="col-6">
                        <label>رمز عبور</label>
                        <input type="password" asp-for="@Model.User.Password" />
                    </div>
                    <div class="col-6">
                        <label>تکرار رمز عبور</label>
                        <input type="password" asp-for="@Model.User.ConfirmPassword" />
                    </div>
                    <div class="col-12">
                        <label>نقش ها</label>
                        @foreach (var item in Model.Roles)
                        {
                            <input type="checkbox" name="roleNmae" value="@item.Name" />
                            <span>@item.Name</span>
                        }
                    </div>
                    <div class="col-12 text-left">
                        <input type="submit" value="ثبت اطلاعات" />
                        <a asp-area="Admin" asp-controller="ManagedUser" asp-action="Index">بازگشت</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>