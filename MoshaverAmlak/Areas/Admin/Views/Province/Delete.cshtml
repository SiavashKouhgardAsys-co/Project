@model Province
@{
    ViewData["Title"] = "Delete";
}

<div class="container m-1">
    <div class="row">
        <div class="col">
            <form asp-area="Admin" asp-controller="Province" asp-action="Delete" asp-route-Id="@Model.Id" method="post">
                <div class="row">
                    <div class="col-12">
                        ایا مایل به حذف استان "@Model.Name" هستید؟
                    </div>
                </div>
                <div class="col-12">
                    <input type="submit" value="بله" />
                    <a asp-area="Admin" asp-controller="Province" asp-action="Index">
                        خیر
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

