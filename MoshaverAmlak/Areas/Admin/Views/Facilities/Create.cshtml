@model Facilities
@{
    ViewData["Title"] = "Create";
}

<div class="container m-1">
    <div class="row">
        <div class="col">
            <form asp-area="Admin" asp-controller="Facilities" asp-action="Create" method="post">
                <div class="row">
                    <div class="col-3">
                        <span>ورود اطلاعات</span>
                    </div>
                    <div class="col-4">
                        <select>
                            <option value="0">تهویه هوا</option>
                            <option value="0">گرمایش</option>
                            <option value="0">درب ورودی</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Name" />
                    </div>
                    <div class="col-2">
                        <input type="submit" value="ثبت اطلاعات" />
                    </div>

                </div>
                <div class="row">
                    <div class="col-12 ">
                        <a asp-area="Admin" asp-controller="Facilities" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


