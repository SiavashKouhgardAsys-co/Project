@model SendDataToView<List<CityViewmodel>>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col">
            <a asp-area="Admin" asp-controller="City" asp-action="Create">
                ثبت شهر جدید
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>

                    <th>
                        <span>ردیف</span>
                    </th>
                    <th>
                        <span>شهر</span>
                    </th>
                    <th>
                        <span>استان</span>
                    </th>
                    <th>
                        <span>عملیات</span>
                    </th>

                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                    foreach (var item in Model.Entity)
                    {
                        <tr>
                            <td>
                                @index
                            </td>
                            <td>
                                @item.CityName
                            </td>
                            <td>
                                @item.ProvinceName
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="City" asp-action="Delete" asp-route-Id="@item.CityId">
                                    حذف
                                </a>
                                <a asp-area="Admin" asp-controller="City" asp-action="Edit" asp-route-Id="@item.CityId">
                                    ویرایش
                                </a>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>




