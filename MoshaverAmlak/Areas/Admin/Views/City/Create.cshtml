@model CityViewmodel_Create
@{
    ViewData["Title"] = "Create";
}

<div class="container m-1">
    <div class="row">
        <div class="col">
            <form asp-area="Admin" asp-controller="City" asp-action="Create" method="post">
                <div class="row">
                    <div class="col-3">
                        <span>ورود اطلاعات</span>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="@Model.City.Name" />
                    </div>
                    <div class="col-4">
                        <select asp-for="@Model.City.ProvinceId">
                            <option value="0">انتخاب کنید . . . </option>
                            @foreach (var item in Model.Provinces)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <input type="submit" value="ثبت اطلاعات" />
                        <a asp-area="Admin" asp-controller="City" asp-action="Index">
                            بازگشت
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



