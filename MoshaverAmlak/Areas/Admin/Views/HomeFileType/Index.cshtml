@model SendDataToView<IQueryable<HomeFileType>>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col">
            <a asp-area="Admin" asp-controller="HomeFileType" asp-action="Create">
                ثبت نوع فایل خانه جدید
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>

                    <th>
                        <span>ردیف</span>
                    </th>
                    <th>
                        <span>نوع خانه</span>
                    </th>
                    <th>
                        <span>عملیات</span>
                    </th>
                
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Entity)
                {
                    <tr>
                        <td>
                            1
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="HomeFileType" asp-action="Delete" asp-route-id="@item.Id">
                                حذف
                            </a>
                            |
                            <a asp-area="Admin" asp-controller="HomeFileType" asp-action="Edit" asp-route-id="@item.Id">
                                ویرایش
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

