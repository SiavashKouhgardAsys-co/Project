@model UserViewmodel_Login
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col">
            <form asp-area="MainSite" asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group col-12" >
                    <label for="username">
                        نام کاربری
                    </label>
                    <input class="form-control" type="text" id="username"/>
                </div>
                <div class="form-group col-12">
                    <label for="password">
                        رمز عبور
                    </label>
                    <input class="form-control" type="password" id="password"/>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-default">وارد شوید</button>
                </div>
            </form>
        </div>
    </div>
</div>


